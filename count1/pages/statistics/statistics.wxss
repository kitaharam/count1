.container {
  padding: 20rpx 0;
  background: var(--background-color);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-selector {
  width: 92%;
  margin: 16px 0;
  background: var(--card-background);
  border-radius: var(--border-radius);
  overflow: hidden;
}

.picker {
  padding: 16px;
  text-align: center;
  font-size: 17px;
  font-weight: 600;
}

.arrow {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
}

.total-card {
  width: 92%;
  margin: 16px 0;
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 24px;
  text-align: center;
  box-sizing: border-box;
}

.label {
  font-size: 17px;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.amount {
  font-size: 48px;
  font-weight: 700;
  color: var(--text-primary);
  font-feature-settings: "tnum";
}

.charts-container {
  width: 92%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chart-card {
  width: 100%;
  margin: 0;
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 20px;
  box-sizing: border-box;
}

.chart-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20px;
  text-align: center;
  padding: 0 20px;
}

.chart-wrapper {
  width: 100%;
  height: 300px;
  position: relative;
}

.chart-canvas {
  position: absolute;
  left: 0;
  top: 0;
  width: 100% !important;
  height: 100% !important;
}

.chart-content {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
} 