/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.page-container {
  min-height: 100vh;
  background: var(--background-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.content-container {
  width: 92%;
  max-width: 800rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  background: var(--card-background);
  padding: 30rpx;
  border-radius: var(--border-radius);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.month-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.month-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.arrow-btn {
  padding: 10rpx 20rpx;
  color: var(--text-secondary);
  font-size: 32rpx;
}

.month-summary {
  text-align: center;
}

.summary-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.amount {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.bill-list {
  width: 100%;
  flex: 1;
  overflow: hidden;
}

.bill-area {
  width: 100%;
  height: 160rpx;
  position: relative;
  margin-bottom: 20rpx;
  border-radius: var(--border-radius);
  overflow: hidden;
}

.bill-movable {
  width: 100%;
  height: 100%;
  background: var(--card-background);
}

.bill-item {
  padding: 15px;
  height: 100%;
  box-sizing: border-box;
}

.bill-info {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bill-main {
  display: flex;
  align-items: center;
  gap: 10px;
}

.tag {
  background: var(--background-color);
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  color: var(--text-secondary);
}

.note {
  font-size: 16px;
  color: var(--text-primary);
}

.bill-sub {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  font-size: 12px;
  color: var(--text-tertiary);
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 100%;
  background: var(--danger-color);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  opacity: 0;
  transition: opacity 0.2s;
}

.delete-btn.show {
  opacity: 1;
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: calc(40rpx + var(--safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: var(--primary-color);
  color: white;
  font-size: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  transition: transform 0.2s;
}

.add-btn:active {
  transform: scale(0.95);
}

.delete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.delete-modal-content {
  width: 280px;
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 20px;
}

.delete-modal-title {
  font-size: 18px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 10px;
}

.delete-modal-text {
  font-size: 14px;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 20px;
}

.delete-modal-buttons {
  display: flex;
  gap: 10px;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
}

.cancel-btn {
  background: var(--background-color);
  color: var(--text-secondary);
}

.confirm-btn {
  background: var(--danger-color);
  color: white;
} 